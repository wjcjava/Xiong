<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/aaaa"
    android:background="#e6ebef">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#1f539e"
        app:layout_heightPercent="10%h"
        app:layout_widthPercent="100%w">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/personal_back_img"
            app:layout_heightPercent="10%w"
            app:layout_widthPercent="10%w" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="登录"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            app:layout_heightPercent="50%h"
            app:layout_widthPercent="50%w"/>
        <TextView
            android:id="@+id/register"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            app:layout_heightPercent="30%h"
            app:layout_widthPercent="20%w"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        android:textSize="15dp"
        app:layout_widthPercent="55%w"
        android:textColor="#3565a6"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="使用社交账号登录到熊猫频道"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="15%h"
        app:layout_widthPercent="87%w"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="25%w"
            app:layout_widthPercent="100%w"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:weightSum="3"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp">
            <RadioButton
                android:id="@+id/login_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/login_weixin"
                android:gravity="center"
                android:text="微信" />
            <RadioButton
                android:id="@+id/QQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/login_qq"
                android:gravity="center"
                android:text="QQ" />
            <RadioButton
                android:id="@+id/login_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@mipmap/login_sina"
                android:gravity="center"
                android:text="微博" />
        </RadioGroup>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="5%h"
        app:layout_widthPercent="25%w"
        android:textColor="#3565a6"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="CNTV通行证"/>

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="87%w"
        android:background="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        >
        <EditText
            android:inputType="phone"
            android:clickable="true"

            android:id="@+id/num"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/info_et"
            android:hint="账号：请输入邮箱或手机号"
            android:textSize="15dp"
            app:layout_heightPercent="100%h"
            app:layout_widthPercent="100%w"
            />
        <ImageView
            android:id="@+id/num_x"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7%w"
            app:layout_widthPercent="7%w"
            android:layout_gravity="center"
            android:visibility="gone"
            android:background="@drawable/login_edit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/delete_gray" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:id="@+id/tishi_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="3%h"
        app:layout_widthPercent="45%w"
        android:textColor="#ea2000"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:text=""

        />
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="8%h"
        app:layout_widthPercent="87%w"
        android:background="@drawable/login_edit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/pass_x"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="7%w"
            app:layout_widthPercent="7%w"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/delete_gray"/>

        <EditText
            android:clickable="true"
            android:id="@+id/pass"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="15dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/info_et"
            android:hint="请输入密码"
            android:password="true"
            app:layout_heightPercent="100%h"
            app:layout_widthPercent="100%w"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <TextView
        android:id="@+id/tishi_pass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="3%h"
        app:layout_widthPercent="35%w"
        android:textColor="#ea2000"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        android:text=""
        />
    <TextView
        android:id="@+id/forget_pass"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="3%h"
        app:layout_widthPercent="25%w"
        android:textColor="#3565a6"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:text="忘记密码?"
        android:layout_gravity="right"

        />
    <Button
        android:id="@+id/dengl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_heightPercent="12%w"
        app:layout_widthPercent="90%w"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_butt"
        android:text="登录"
        android:textColor="#ffffff"

        />

</com.zhy.android.percent.support.PercentLinearLayout>