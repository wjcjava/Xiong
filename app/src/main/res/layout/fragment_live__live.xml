<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="chongci.myapplication.view.fragment.livefragment.Live_LivesFragment">
<!--
<io.vov.vitamio.widget.VideoView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/vitamio_viedoviews"
    />-->

    <RelativeLayout
        android:id="@+id/lpanda_live_play_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/lpanda_live_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/no_img" />

        <ImageView
            android:id="@+id/lpanda_live_operate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/lpanda_pause" />

        <include
            android:id="@+id/lpanda_giraffe_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/live_playvedio"
            android:visibility="gone" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_vediotitle"
        />

     <ExpandableListView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/el_listview"
          android:groupIndicator="@drawable/myexpandlistselect"
          ></ExpandableListView>

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab"
        app:tabTextColor="#000"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        ></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewpager"
        ></android.support.v4.view.ViewPager>
</LinearLayout>
