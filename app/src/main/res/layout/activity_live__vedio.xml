<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="chongci.myapplication.activity.Live_VedioActivity">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/videocontroller1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:background="@drawable/shape_gradient_black_top"
        android:padding="5dp"
        android:id="@+id/app_video_top_box"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">



        <TextView
            android:id="@+id/app_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:visibility="visible"
            android:paddingLeft="9dp"
            android:gravity="center"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/mycollectselect"
            android:id="@+id/app_video_collect"
            android:layout_marginLeft="9dp"

            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/share"
            android:layout_marginLeft="9dp"

            android:id="@+id/app_video_share"
            />
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/play_fullscree_menu_true"
            android:layout_marginLeft="9dp"
            android:id="@+id/app_video_menu"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            />

    </LinearLayout>

</FrameLayout>
