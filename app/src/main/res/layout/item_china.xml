<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/play_layout"
        >

        <ImageView
            android:id="@+id/live_china_tab_item_img"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="600px"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/lpanda_pause"
            android:layout_centerInParent="true"
            android:id="@+id/btn_play"
            />




    </RelativeLayout>

    <TextView
        android:id="@+id/live_china_tab_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:textSize="40px"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="12px"
        android:textColor="#000000"
        />

    <RelativeLayout
        android:id="@+id/live_china_tab_item_jianjie_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/live_china_tab_item_jianjie_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:text="简介"
            android:textColor="#656565"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/livechina_arrow"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/live_china_tab_item_jianjie_img"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:background="@drawable/live_china_detail_down"
                android:textColor="#656565" />
        </RelativeLayout>

        <View
            android:id="@+id/livechina_jianjie_underline"
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_below="@id/live_china_tab_item_jianjie_tishi"
            android:layout_marginTop="5dp"
            android:background="#DFDFDF"
            android:visibility="gone" />

        <TextView
            android:visibility="gone"
            android:id="@+id/live_china_tab_item_jianjie_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/livechina_jianjie_underline"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:lineSpacingExtra="12px"
            android:paddingBottom="32px"
            android:paddingTop="72px"
            android:textColor="#000000"
            android:textSize="40px" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="30px"
        android:background="#E6EBF0"
        />


</LinearLayout>