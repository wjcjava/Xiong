    android:id="@+id/activity_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chongci.myapplication.activity.VideoActivity">

    <VideoView
        android:id="@+id/video_bobao"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/buffer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/video_bobao"
        android:layout_marginLeft="12dp"
        android:textColor="#e6ff01"
        android:text="切换"
        android:textSize="20sp"/>
</RelativeLayout>
