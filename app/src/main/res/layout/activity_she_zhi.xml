<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/share_it_background"
    android:orientation="vertical">
    <!--个人中心-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="3dp"
            android:padding="3dp"
            android:src="@mipmap/personal_back_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="@color/baise"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/denglu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/baise"
        android:orientation="horizontal"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="3%"
        app:layout_widthPercent="94%">

        <ImageView
            android:id="@+id/login_image"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="18dp"
            android:padding="10dp"
            android:src="@mipmap/personal_login_head" />

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="点击登录" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/lishi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/baise"
        android:gravity="center_vertical"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="1.5%"
        app:layout_widthPercent="94%">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:padding="7dp"
            android:src="@mipmap/personal_history_img" />

        <TextView
            android:id="@+id/textt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:padding="11dp"
            android:text="观看历史" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textt"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="18dp"
            android:padding="7dp"
            android:src="@mipmap/personal_enter_img" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shoucang"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/baise"
        android:gravity="center_vertical"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="1.5%"
        app:layout_widthPercent="94%">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:padding="7dp"
            android:src="@mipmap/personal_shoucang_img" />

        <TextView
            android:id="@+id/textt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_toEndOf="@+id/imageView1"
            android:padding="11dp"
            android:text="我的收藏" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textt1"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="18dp"
            android:padding="7dp"
            android:src="@mipmap/personal_enter_img" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/shezhi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/baise"
        android:gravity="center_vertical"
        app:layout_heightPercent="12%"
        app:layout_marginLeftPercent="3%"
        app:layout_marginTopPercent="1.5%"
        app:layout_widthPercent="94%">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:padding="7dp"
            android:src="@mipmap/personal_set_img" />

        <TextView
            android:id="@+id/textt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:padding="11dp"
            android:text="设置" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textt2"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="18dp"
            android:padding="7dp"
            android:src="@mipmap/personal_enter_img" />
    </RelativeLayout>
</com.zhy.android.percent.support.PercentLinearLayout>
